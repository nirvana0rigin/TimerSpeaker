<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="jp.co.nirvana0rigin.timerspeaker.Info">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/base_info">

        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="@string/max_time_title"
            android:textColor="@color/darkgray"
            android:textSize="10sp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/darkgray"
            android:id="@+id/max_hours" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="|"
            android:textColor="@color/darkgray"
            android:textSize="16sp" />

        <TextView
            android:layout_width="105dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="@string/interval_time_title"
            android:textColor="@color/darkgray"
            android:textSize="10sp" />

        <TextView
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="@color/darkgray"
            android:id="@+id/interval" />

    </LinearLayout>

</FrameLayout>
